#:kivy 2.3.0



<MainWindowButton@Button>:
    font_size: 18
    font_style: 'ariel' 
    background_normal: ''
    
   
<MENUSCREEN>: 
    #makes the background color the proper shade
    GridLayout:
        cols: 2
        rows: 2
        padding: 10, 10
        spacing: 10, 10 
        canvas:
            Color: 
                rgba: app.colors.STEELBLUE
            Rectangle: 
                size: 800, 480
        
        
        #Defines the start button look and Behavior
        MainWindowButton:
            id: startBt
            text: "Start Test"
            background_color: app.colors.PINEGREEN
            on_press: app.startTest("Start Test Pressed") #print("start test")
            Image:
                source: './GUI_Icons/Test_icon.png'
                y: self.parent.y + 20       
                x: self.parent.x + 100
                fit_mode: "fill"
                size: 185, 185           
                color: 0.0745, 0.4353, 0.3882, 0.2500       
            
                
        #Defines the export button look and Behavior   
        MainWindowButton:
            id: exportBt
            text: "Export"
            background_color: app.colors.SELYELLOW
            on_press: app.export("Export Pressed")
            Image:
                source: './GUI_Icons/Export_icon.png'
                y: self.parent.y + 20       
                x: self.parent.x + 100
                fit_mode: "fill"
                size: 185, 185           
                color: 1.0000, 0.7294, 0.0314, 0.2500

        #Defines Test Settings button look and Behavior
        #Sends user back to Settings Screen
        MainWindowButton:
            id: testStBt
            text: "Test Settings"
            on_press: app.sm.current = 'settings'
            background_color: app.colors.PRUSSBLUE
            Image:
                source: './GUI_Icons/Test_settings_icon.png'
                y: self.parent.y + 20       
                x: self.parent.x + 100
                fit_mode: "fill"
                size: 185, 185           
                color: 0.0118, 0.1686, 0.2627, 0.2500
       
        #Defines Power button look and Behavior
        #Powers down the device
        MainWindowButton:
            id: pwrBt
            text: "Power Off"
            background_color: app.colors.ENGORANGE
            
            on_press: root.shutdown()
            Image:
                source: './GUI_Icons/Power_icon.png'
                y: self.parent.y + 20       
                x: self.parent.x + 100
                fit_mode: "fill"
                size: 185, 185           
                color: 0.8157, 0.0000, 0.0000, 0.2500