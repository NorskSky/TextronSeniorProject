#:kivy 2.3.0
#:import os os


<InputSelction@Spinner>: 
    size_hint: None, None
    size: 100, 44  
    values: app.INPUTS
    on_text: print("The spinner {} has text {}".format(self, self.text))

<ThresholdInput@TextInput>:
    multiline: False
    hint_text:'Enter Desired Pass Value'    
    size_hint: None, None
    size: 180, 44
    input_filter: 'float'

<SETTINGSSCREEN>:    
    FloatLayout:        
        cols: 10
        rows: 10
        #Sets screen bakcground color
        canvas:
            Color: 
                rgba: app.STEELBLUE
            Rectangle: 
                size: 800, 480        
            
        #Defines back button look and behavior
        #Sends user back to Main menu
        Button:
            text: "Back"
            font_size: 18
            font_style: 'ariel'
            background_normal: ''           
            background_color: app.ENGORANGE
            size_hint: 0.30, 0.125
            pos: 10, 10
            
            on_press: app.sm.current = 'menu'
        
        #Defines save button looks and behavior.
        #Saves user defined thresholds for each 
        #input to be tested and which inputs are 
        #to be tested
        Button:
            text: "Save"
            font_size: 18
            font_style: 'ariel'
            background_normal: ''           
            background_color: app.PINEGREEN
            size_hint: 0.30, 0.125
            pos: 550, 10
            
            on_press: app.save()
        
        #Defines import button looks and behavior.
        #Allows user to use a known working GMA36 to
        #to set thesholds for next test.  
        #DOES NOT SET INPUTS
        Button:
            text: "Import"
            font_size: 18
            font_style: 'ariel'
            background_normal: ''           
            background_color: app.SELYELLOW
            size_hint: 0.30, 0.125
            pos: 280, 10
            
            on_press: app.sm.current = 'menu'

